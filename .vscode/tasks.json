{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build SDL2",
            "type": "shell",
            "command": "g++",
            "args": [
                "-IC:/SDL2/include",
                "-LC:/SDL2/lib",
                "${file}",
                "-o",
                "${fileDirname}/a.exe",
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}

